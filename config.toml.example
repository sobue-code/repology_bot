[bot]
# Telegram Bot Token from @BotFather
token = "YOUR_BOT_TOKEN_HERE"

# Admin Telegram IDs (optional, for error notifications)
admin_ids = [123456789]

[database]
# Path to SQLite database file
path = "data/bot.db"

[logging]
# Logging level: DEBUG, INFO, WARNING, ERROR
level = "INFO"

# Log file path
file = "logs/bot.log"

# Maximum log file size in bytes (10MB)
max_bytes = 10485760

# Number of backup log files to keep
backup_count = 5

[repology]
# Repology API base URL
api_base_url = "https://repology.org/api/v1"

# Request timeout in seconds
request_timeout = 30

# Delay between requests to avoid rate limiting (seconds)
rate_limit_delay = 1.0

# Cache duration in hours
cache_duration = 6

[rdb]
# ALT Linux RDB API base URL
api_base_url = "https://rdb.altlinux.org/api/site"
request_timeout = 30

# Email to RDB maintainer nickname mapping
# Format: email = "nickname"
[rdb.maintainer_mapping]
"maintainer@example.com" = "nickname_in_rdb"
# Add more mappings as needed

[notifications]
# Default time for daily checks (HH:MM format, 24h)
default_check_time = "09:00"

# Maximum number of packages to show in one message
max_packages_per_message = 20

# Minimum interval between notifications (hours)
min_notification_interval = 1

# User configurations
[[users]]
name = "User Name"
telegram_id = 123456789
emails = ["maintainer@example.com", "another@example.org"]
enabled = true

# Add more users as needed
# [[users]]
# name = "Another User"
# telegram_id = 987654321
# emails = ["user@example.com"]
# enabled = true
